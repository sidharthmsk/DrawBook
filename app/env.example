PORT=3000
DATA_DIR=./data

# Optional password protection
# APP_PASSWORD=

# Enable the tldraw editor (requires a tldraw license key for production use)
# See https://tldraw.dev for licensing details
ENABLE_TLDRAW=false

# Enable [[wiki-links]], link graph, and backlinks
ENABLE_LINKING=false

# Allow new user registration in multi-user mode (default: true)
# Set to false to prevent new sign-ups after initial admin account is created
# ENABLE_REGISTRATION=true

# Restrict CORS to specific origins (comma-separated). Open to all if unset.
# CORS_ORIGINS=https://drawbook.example.com

# Storage backend: "local" (default) or "minio" (S3-compatible)
# Leave unset for auto-detection (uses MinIO when credentials are present)
# STORAGE_BACKEND=

# MinIO / S3-compatible storage
# MINIO_ENDPOINT_URL=http://localhost:9000
# MINIO_ACCESS_KEY=
# MINIO_SECRET_KEY=
# MINIO_BUCKET=drawbook
# MINIO_REGION=us-east-1
# MINIO_PREFIX=

# AI features (Groq + Kimi K2)
# Get your API key at https://console.groq.com
# GROQ_API_KEY=

# Trust proxy headers (set to "true" when behind a reverse proxy like nginx)
# Required for accurate IP-based rate limiting behind a proxy
# TRUST_PROXY=true
